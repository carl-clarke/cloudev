{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ESNext"
    ],
    "types": [
    ]
  },
  "include": [
    "src/**/*",
    "webpack-mods/**/*",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ]
}